<div class="container-image">
  <div class="container margin-top-100">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <%= simple_form_for(@restaurant, class: "form-group") do |a| %>
        <%= a.input :name, class: "form-control"%> <br>
        <%= a.input :address, class: "form-control" %> <br>
        <%= a.input :phone_number, class: "form-control"%> <br>
        <%= a.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %> <br>
        <%= a.button :submit, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
